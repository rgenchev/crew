<header class="tc pv4 pv5-ns">
  <h1 class="f5 f3-ns fw6 mid-gray">Teams</h1>
</header>

<% @teams.each do |team| %>
  <ul class="list pl0 mt0 measure center">
    <li
      class="flex items-center lh-copy pa3 ph0-l bb b--black-10">
        <img class="w2 h2 w3-ns h3-ns br-100" src="http://tachyons.io/img/avatar-mrmrs.jpg" />
        <div class="pl3 flex-auto">
          <span class="f6 db black-70"><%= link_to team.name, team_url(team) %></span>
        </div>
        <div>
          <span class="f6 link blue hover-dark-gray"><%= team.users.count %> Teammates</span>
        </div>
    </li>
  </ul>
<% end %>
