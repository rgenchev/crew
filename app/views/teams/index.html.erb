<section class="pa2 pa4-ns">
  <article class="ba b--black-10 br2 bg-white pa4 mw6 center">
    <div>
      <h4 class="f3 fw4 black-60 dib v-mid mv0 mr3">Teams</h4>
    </div>
    <ul class="list f6 pl0 mt3 mb0">
      <% @teams.each do |team| %>
        <li class="pv2">
        <a href="#" class="">
          <%= link_to team.name, team_path(team.slug), class: "link blue lh-title" %>
          <span class="db black-60"><%= team.users.count %> Members</span>
        </a>
      </li>  
      <% end %>
    </ul>
  </article>
</section>